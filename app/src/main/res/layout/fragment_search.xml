<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navdrawer.SearchFragment"
    android:id="@+id/container"
    >
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/Search_view"
        android:hint="@string/LAY_HintBook"
        android:textColor="@color/primary_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/search_bg"
        android:drawableStart="@drawable/ic_search_icon"
        android:drawableTint="@color/primary_green"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:maxLines="1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advancedSearchButton"
        android:src="@drawable/ic_search_expand"
        app:layout_constraintTop_toTopOf="@id/Search_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Search_view"
        app:layout_constraintBottom_toTopOf="@id/Text_Result"
        android:visibility="gone"
        android:paddingBottom="0dp"
        >
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/et_author"
            android:hint="@string/LAY_HintAuthor"
            android:textColor="@color/primary_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/search_bg"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:drawableTint="@color/primary_green"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/et_genre"
            android:hint="@string/LAY_GenreHint"
            android:textColor="@color/primary_green"
            app:layout_constraintTop_toBottomOf="@+id/et_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/search_bg"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawableTint="@color/primary_green"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <View
            android:id="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Text_Result"
        android:text="@string/MSG_result"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary_green"
        android:drawableStart="@drawable/ic_search_book"
        app:layout_constraintTop_toBottomOf="@+id/advanced"
        app:layout_constraintStart_toStartOf="@id/Search_view"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_green"
        android:layout_marginTop="20dp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Search_Recicler_View"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_Result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>