<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navdrawer.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/nav_header_desc"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_picture"
            app:shapeAppearance="@style/CircleImageViewStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/edit_profile_imageView"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/nav_header_desc"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/default_picture"
            app:shapeAppearance="@style/CircleImageViewStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/tv_username"
            android:layout_marginStart="20dp"
            android:text="AAAAAAAAAA"
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@id/profile_imageView"
            app:layout_constraintTop_toTopOf="@id/profile_imageView"
            app:layout_constraintEnd_toStartOf="@id/language_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@id/profile_imageView"
            app:layout_constraintTop_toTopOf="@id/profile_imageView"
            android:hint="Username"
            android:inputType="textPersonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>


        <TextView
            android:id="@+id/tv_followers"
            app:layout_constraintTop_toBottomOf="@id/et_username"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            android:layout_marginTop="10dp"
            android:text="500 seguidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/language_spinner"
            app:layout_constraintTop_toTopOf="@id/profile_imageView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/divider"
            app:layout_constraintTop_toBottomOf="@id/profile_imageView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <ImageView
            android:id="@+id/heart"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            android:src="@drawable/ic_heart"
            app:tint="@color/primary_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_preferred_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/heart"
            app:layout_constraintStart_toStartOf="@id/profile_imageView"
            app:layout_constraintEnd_toStartOf="@id/heart"
            android:text="@string/LAY_Genre"
            android:textSize="16dp"
            android:textColor="@color/primary_green"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/et1_prefferred_genre"
            android:text="@string/LAY_NotSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/et2_prefferred_genre"
            app:layout_constraintBottom_toBottomOf="@id/et2_prefferred_genre"
            app:layout_constraintStart_toStartOf="@id/profile_imageView"
            app:layout_constraintEnd_toStartOf="@id/heart"/>

        <EditText
            android:id="@+id/et2_prefferred_genre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/LAY_GenreHint"
            android:singleLine="true"
            android:textSize="16dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@id/heart"
            app:layout_constraintStart_toStartOf="@id/profile_imageView"
            app:layout_constraintTop_toBottomOf="@id/tv_preferred_genre" />
        <!-- aaa -->
        <TextView
            android:id="@+id/tv_preferred_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/heart"
            app:layout_constraintStart_toStartOf="@id/heart"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/LAY_Author"
            android:textSize="16dp"
            android:textColor="@color/primary_green"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/et1_prefferred_author"
            android:text="@string/LAY_NotSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@id/et2_prefferred_author"
            app:layout_constraintBottom_toBottomOf="@id/et2_prefferred_author"
            app:layout_constraintStart_toEndOf="@id/heart"
            app:layout_constraintEnd_toEndOf="@id/et2_prefferred_author"/>

        <EditText
            android:id="@+id/et2_prefferred_author"
            android:hint="@string/LAY_HintAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/heart"
            app:layout_constraintTop_toBottomOf="@id/tv_preferred_author"
            android:singleLine="true"
            android:focusable="false"
            android:visibility="invisible"/>

        <Button
            android:visibility="visible"
            android:id="@+id/b_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/primary_green"
            android:text="@string/LAY_ImportContacts"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et2_prefferred_author"
            android:layout_marginVertical="10dp"/>

        <Button
            android:visibility="visible"
            android:id="@+id/b_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/primary_green"
            android:text="@string/LAY_ChangePassword"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/b_contacts"
            android:layout_marginVertical="10dp"/>

        <View
            android:id="@+id/divider2"
            app:layout_constraintTop_toTopOf="@id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/b_password"
            app:tabTextColor="@color/primary_green"
            android:layout_marginTop="15dp"
            app:tabIndicatorHeight="2.5dp">
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tabLayout"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/loading_bar"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>