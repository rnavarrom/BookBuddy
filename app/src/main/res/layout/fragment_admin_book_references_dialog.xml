<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navdrawer.adminnav.ReferencesBookDialog"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:titleTextColor="@color/white"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.BookBuddy.PopupOverlay"
            android:title="Mi Toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_author"
                android:text="Author: "
                android:textColor="@color/primary_green"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_author"
                android:hint="Author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:focusable="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_author"
                app:layout_constraintTop_toTopOf="@id/tv_author"
                app:layout_constraintBottom_toBottomOf="@id/tv_author"/>

            <TextView
                android:id="@+id/tv_language"
                android:text="Language: "
                android:textColor="@color/primary_green"
                android:focusable="false"
                app:layout_constraintTop_toBottomOf="@id/et_author"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/et_language"
                android:hint="Language"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_language"
                app:layout_constraintTop_toTopOf="@id/tv_language"
                app:layout_constraintBottom_toBottomOf="@id/tv_language"/>

            <TextView
                android:id="@+id/tv_genres"
                android:text="Genres: "
                android:textColor="@color/primary_green"
                app:layout_constraintTop_toBottomOf="@id/et_language"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_genres"
                app:layout_constraintTop_toBottomOf="@id/tv_genres"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toStartOf="@id/btn_add"
                />

            <ImageButton
                android:id="@+id/btn_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:tint="@color/green"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@id/rv_genres"
                app:layout_constraintBottom_toTopOf="@id/btn_delete"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:tint="@color/red_error"

                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/btn_add"
                app:layout_constraintBottom_toBottomOf="@id/rv_genres"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_libraries"
                android:text="Libraries: "
                android:textColor="@color/primary_green"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/rv_genres"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_libraries"
                app:layout_constraintTop_toBottomOf="@id/tv_libraries"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toStartOf="@id/btn_add"
                />

            <ImageButton
                android:id="@+id/btn_add_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                app:tint="@color/green"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="@id/rv_libraries"
                app:layout_constraintBottom_toTopOf="@id/btn_edit_library"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btn_edit_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                app:tint="@color/orange"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/btn_add_library"
                app:layout_constraintBottom_toTopOf="@id/btn_delete_library"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:id="@+id/btn_delete_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:tint="@color/red_error"

                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@id/btn_edit_library"
                app:layout_constraintBottom_toBottomOf="@id/rv_libraries"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/loading_bar"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>