<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navdrawer.HomeFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ic_actual"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_home_menubook"
            app:layout_constraintBottom_toBottomOf="@id/tv_actualbook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_actualbook"
            app:tint="@color/primary_green" />
        <TextView
            android:id="@+id/tv_actualbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:text="@string/actual_book"
            android:textColor="@color/primary_green"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ic_actual"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/empty_reading"
            android:text="@string/LAY_NoReadingBooks"
            android:textColor="@color/primary_green"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/home_rv"
            app:layout_constraintBottom_toBottomOf="@id/home_rv"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:minHeight="160dp"
            app:layout_constraintStart_toStartOf="@id/ic_actual"
            app:layout_constraintTop_toBottomOf="@id/tv_actualbook" />

        <ImageView
            android:id="@+id/ic_pending"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_home_pendingbooks"
            app:layout_constraintBottom_toBottomOf="@id/tv_pendingbooks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_pendingbooks"
            app:tint="@color/primary_green" />

        <TextView
            android:id="@+id/tv_pendingbooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/LAY_PendingBooks"
            android:textColor="@color/primary_green"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ic_pending"
            app:layout_constraintTop_toBottomOf="@id/home_rv" />

        <ImageView
            android:id="@+id/ic_pending_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_search_icon"
            app:layout_constraintBottom_toBottomOf="@id/tv_pendingbooks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_rv"
            app:tint="@color/primary_green" />

        <TextView
            android:id="@+id/empty_pending"
            android:text="@string/LAY_NoPendingBooks"
            android:textColor="@color/primary_green"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_pendingbooks"
            app:layout_constraintBottom_toBottomOf="@id/rv_pendingbooks"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pendingbooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/primary_green_20"
            android:minHeight="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pendingbooks" />
        <!-- Readed books -->
        <ImageView
            android:id="@+id/ic_readed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_home_readedbooks"
            app:layout_constraintTop_toTopOf="@id/tv_readedbooks"
            app:layout_constraintBottom_toBottomOf="@id/tv_readedbooks"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/primary_green" />

        <TextView
            android:id="@+id/tv_readedbooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="@string/LAY_ReadBooks"
            android:textColor="@color/primary_green"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/ic_readed"
            app:layout_constraintTop_toBottomOf="@id/rv_pendingbooks" />

        <ImageView
            android:id="@+id/ic_readed_search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_search_icon"
            app:layout_constraintBottom_toBottomOf="@id/tv_readedbooks"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_pendingbooks"
            app:tint="@color/primary_green" />

        <TextView
            android:id="@+id/empty_readed"
            android:text="@string/LAY_NoReadBooks"
            android:textColor="@color/primary_green"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/rv_readedbooks"
            app:layout_constraintBottom_toBottomOf="@id/rv_readedbooks"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_readedbooks"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@color/primary_green_20"
            android:minHeight="150dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_readedbooks" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>