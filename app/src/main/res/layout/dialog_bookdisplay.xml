<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_book_display"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navdrawer.bookdisplay.BookDisplayDialog"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:titleTextColor="@color/white"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.BookBuddy.PopupOverlay"
            android:title="Mi Toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="120dp"
                android:layout_height="180dp">
                <ImageView
                    android:id="@+id/d_book_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/purple_200"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/book_mark"
                    android:tooltipText="BookMark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primary_green"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_markbook_read"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/d_book_title"
                android:tooltipText="Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cl2"
                app:layout_constraintTop_toTopOf="@id/cl2" />

            <TextView
                android:id="@+id/d_book_author"
                android:tooltipText="Author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/d_book_title"
                app:layout_constraintTop_toBottomOf="@id/d_book_title" />

            <TextView
                android:id="@+id/d_book_language"
                android:tooltipText="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/d_book_title"
                app:layout_constraintTop_toBottomOf="@id/d_book_author" />

            <TextView
                android:id="@+id/d_book_publishdate"
                android:tooltipText="Publish Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/d_book_author"
                app:layout_constraintTop_toBottomOf="@id/d_book_language" />

            <TextView
                android:id="@+id/d_book_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/d_book_publishdate"
                app:layout_constraintTop_toBottomOf="@id/d_book_publishdate" />

            <TextView
                android:id="@+id/d_book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="@id/d_book_publishdate"
                app:layout_constraintTop_toBottomOf="@id/d_book_pages" />

            <!-- Description -->

            <RatingBar
                android:id="@+id/book_rating_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="4"
                android:numStars = "5"
                android:theme="@style/RatingBar"
                android:layout_marginTop="10dp"
                style = "?android:attr/ratingBarStyleSmall"
                app:layout_constraintEnd_toEndOf="@id/cl2"
                app:layout_constraintStart_toStartOf="@id/cl2"
                app:layout_constraintTop_toBottomOf="@id/cl2" />

            <TextView
                android:id="@+id/d_book_genres_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Genres"
                android:textColor="@color/primary_green"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/cl2"
                app:layout_constraintTop_toBottomOf="@id/book_rating_display" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_genres"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:layout_constraintStart_toStartOf="@id/d_book_genres_t"
                app:layout_constraintTop_toBottomOf="@id/d_book_genres_t"/>

            <TextView
                android:id="@+id/d_book_description_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description"
                android:textColor="@color/primary_green"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/rv_genres"
                app:layout_constraintTop_toBottomOf="@id/rv_genres" />

            <TextView
                android:id="@+id/d_book_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="12"
                android:lines="12"
                android:text="Long DescriptionLong DescriptionLong DescriptionLong DLong DescriptionLong DescriptionLong DescriptionLong DesescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLonLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong DescriptionLong Description"
                android:justificationMode="inter_word"
                android:scrollbars="vertical"
                android:fadeScrollbars="false"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="@id/d_book_description_t"
                app:layout_constraintTop_toBottomOf="@id/d_book_description_t" />

            <ImageView
                android:id="@+id/icon_libraries"
                android:tooltipText="Libraries"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_map"
                app:tint="@color/primary_green"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/number_libraries"/>

            <TextView
                android:id="@+id/number_libraries"
                android:text="4"
                android:textColor="@color/primary_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/icon_libraries"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:tooltipText="Add comment"
                android:id="@+id/icon_add_comments"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/icon_add_comment"
                app:tint="@color/primary_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_comments"/>

            <ImageView
                android:tooltipText="Comments"
                android:id="@+id/icon_comments"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_book_comments"
                app:tint="@color/primary_green"
                app:layout_constraintEnd_toStartOf="@id/icon_add_comments"
                app:layout_constraintBottom_toTopOf="@id/number_comments"/>

            <ImageView
                android:tooltipText="Text to speech"
                android:id="@+id/icon_text_to_speach"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/ic_read_text"
                app:tint="@color/primary_green"
                app:layout_constraintStart_toEndOf="@id/icon_libraries"
                app:layout_constraintBottom_toTopOf="@id/number_comments"/>

            <TextView
                android:id="@+id/number_comments"
                android:text="500"
                android:textColor="@color/primary_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/icon_comments"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:visibility="visible">
            <ProgressBar
                android:id="@+id/loading_bar"
                android:indeterminate="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>