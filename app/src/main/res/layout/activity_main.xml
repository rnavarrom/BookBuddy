<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@drawable/gradient2"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="show"
        >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/MA_Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="450dp"
        android:src="@drawable/logonobg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="#4CAF50"
        android:id="@+id/MA_Text1"
        app:layout_constraintTop_toBottomOf="@+id/MA_Image"
        app:layout_constraintBottom_toTopOf="@+id/MA_Edit_User"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MA_Text2"
        app:layout_constraintTop_toBottomOf="@+id/MA_Text1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/MA_Edit_User"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Test"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:layout_marginBottom="40dp"
         />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/MA_Edit_User"
        app:layout_constraintBottom_toTopOf="@+id/MA_Edit_Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="test"
        android:hint="User Name"
        android:drawableStart="@drawable/ic_register_user"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_green"
        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/MA_Edit_Password"
        app:layout_constraintBottom_toTopOf="@+id/MA_Button_Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:hint="Password"
        android:text="test"
        android:drawableStart="@drawable/ic_register_password"
        android:drawablePadding="10dp"
        android:drawableTint="@color/primary_green"
        android:maxLength="22"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_toggle"
        android:src="@drawable/ic_password_toggle"
        app:layout_constraintTop_toTopOf="@+id/MA_Edit_Password"
        app:layout_constraintEnd_toEndOf="@+id/MA_Edit_Password"
        android:layout_marginTop="10dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MA_CheckBox"
        android:text="Auto login"
        app:layout_constraintTop_toBottomOf="@+id/MA_Edit_Password"
        app:layout_constraintEnd_toEndOf="@+id/MA_Edit_Password"
        app:layout_constraintBottom_toTopOf="@+id/MA_Button_Login"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/MA_Button_Login"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Log In"
        android:layout_marginBottom="150dp"
        android:background="@drawable/rounded_corners"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/MA_Button_SignIn"
        android:textColor="@color/white"
        android:text="Sign In"
        app:layout_constraintTop_toBottomOf="@+id/MA_Button_Login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corners"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:visibility="visible">
        <ProgressBar
            android:id="@+id/loading_bar"
            android:indeterminate="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
