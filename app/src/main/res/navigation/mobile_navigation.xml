<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.bookbuddy.ui.navdrawer.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.bookbuddy.ui.navdrawer.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/nav_scan"
        android:name="com.example.bookbuddy.ui.navdrawer.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_scan" >
        <action
            android:id="@+id/action_nav_scan_to_nav_book_display"
            app:destination="@id/nav_book_display" />
    </fragment>

    <fragment
        android:id="@+id/nav_recommendations"
        android:name="com.example.bookbuddy.ui.navdrawer.RecommendationsFragment"
        android:label="Recommendations"
        tools:layout="@layout/fragment_recommendations" />

    <fragment
        android:id="@+id/nav_contacts"
        android:name="com.example.bookbuddy.ui.navdrawer.ContactsFragment"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.bookbuddy.ui.navdrawer.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.bookbuddy.ui.navdrawer.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <!-- test -->
    <fragment
        android:id="@+id/nav_book_display"
        android:name="com.example.bookbuddy.ui.navdrawer.BookDisplayFragment"
        tools:layout="@layout/fragment_book_display" >
        <action
            android:id="@+id/action_nav_book_display_to_nav_read_comment"
            app:destination="@id/nav_read_comment" />
        <argument
            android:name="bundle"
            app:argType="android.os.Bundle" />
    </fragment>

    <fragment
        android:id="@+id/nav_write_comment"
        android:name="com.example.bookbuddy.ui.navdrawer.WriteCommentFragment"
        tools:layout="@layout/fragment_write_comment" />

    <fragment
        android:id="@+id/nav_read_comment"
        android:name="com.example.bookbuddy.ui.navdrawer.BookCommentsFragment"
        tools:layout="@layout/fragment_book_comments" >
        <argument
            android:name="bundle"
            app:argType="android.os.Bundle" />
    </fragment>

    <fragment
        android:id="@+id/nav_libraries_list"
        android:name="com.example.bookbuddy.ui.navdrawer.LibrariesListFragment"
        tools:layout="@layout/fragment_libraries_list" />

    <fragment
        android:id="@+id/nav_library_map"
        android:name="com.example.bookbuddy.ui.navdrawer.LibraryMapFragment"
        tools:layout="@layout/fragment_library_map" />


</navigation>