<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.navdrawer.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/ic_actual"
            android:src="@drawable/ic_home_menubook"
            app:tint="@color/primary_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_actualbook"
            />
        <TextView
            android:id="@+id/tv_actualbook"
            android:text="Actual Book"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ic_actual"/>

        <ImageView
            android:id="@+id/emptyimage"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_actualbook"
            app:layout_constraintStart_toStartOf="@id/ic_actual"
            android:layout_width="100dp"
            android:layout_height="150dp" />

        <TextView
            android:id="@+id/tv_progress"
            android:text="Progress"
            app:layout_constraintStart_toEndOf="@id/emptyimage"
            app:layout_constraintTop_toTopOf="@id/emptyimage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/primary_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_progress"
            app:layout_constraintStart_toEndOf="@id/emptyimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:id="@+id/progress_bar"
                android:progressDrawable="@drawable/custom_progress_bg"
                android:max="100"
                android:progress="0"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="21dp"/>

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="50%"
                android:textColor="#c0c0c0"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/ic_pending"
            android:src="@drawable/ic_home_pendingbooks"
            app:tint="@color/primary_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/emptyimage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_pendingbooks"
            />
        <TextView
            android:id="@+id/tv_pendingbooks"
            android:text="Pending Books"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/emptyimage"
            app:layout_constraintStart_toEndOf="@id/ic_pending"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pendingbooks"
            android:background="@color/primary_green_20"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pendingbooks"
            app:layout_constraintStart_toStartOf="parent"/>
        <!-- Readed books -->
        <ImageView
            android:id="@+id/ic_readed"
            android:src="@drawable/ic_home_readedbooks"
            app:tint="@color/primary_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_pendingbooks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/tv_readedbooks"
            />
        <TextView
            android:id="@+id/tv_readedbooks"
            android:text="Pending Books"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/rv_pendingbooks"
            app:layout_constraintStart_toEndOf="@id/ic_readed"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_readedbooks"
            android:background="@color/primary_green_20"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tv_readedbooks"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>