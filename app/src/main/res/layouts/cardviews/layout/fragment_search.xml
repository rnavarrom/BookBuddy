    <EditText
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/Search_view"
        android:hint="Book search"
        android:textColor="@color/primary_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/advancedSearchButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/custom_progress_bg"
        android:drawableStart="@drawable/ic_search_icon"
        android:drawableTint="@color/primary_green"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:maxLines="1"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/advancedSearchButton"
        android:src="@drawable/ic_search_expand"
        app:layout_constraintStart_toEndOf="@+id/Search_view"
        app:layout_constraintTop_toTopOf="@id/Search_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/advanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Search_view"
        app:layout_constraintBottom_toTopOf="@id/Text_Result"
        android:visibility="visible"
        android:paddingBottom="0dp"
        >
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/et_author"
            android:hint="Author search"
            android:textColor="@color/primary_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_progress_bg"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawableTint="@color/primary_green"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/et_genre"
            android:hint="Genre search"
            android:textColor="@color/primary_green"
            app:layout_constraintTop_toBottomOf="@+id/et_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/custom_progress_bg"
            android:drawableStart="@drawable/ic_search_icon"
            android:drawableTint="@color/primary_green"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
